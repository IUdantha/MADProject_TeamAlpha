<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/companyName1"
        android:layout_width="304dp"
        android:layout_height="26dp"
        android:layout_marginBottom="14dp"
        android:text="@string/t_comName"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/comNameP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/com_contact_view"
        android:layout_width="304dp"
        android:layout_height="26dp"
        android:layout_marginTop="29dp"
        android:text="Contact Number"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comDescriptionP" />

    <TextView
        android:id="@+id/description1"
        android:layout_width="306dp"
        android:layout_height="23dp"
        android:layout_marginBottom="11dp"
        android:text="@string/t_tdescription"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/comDescriptionP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/email3"
        android:layout_width="304dp"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:text="@string/t_emailC"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/comEmailP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comNameP"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/rectangle_companyprofile"
        android:elevation="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/t_company"
        app:layout_constraintBottom_toTopOf="@+id/email3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comDescriptionP"
        android:layout_width="304dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/rectangle_companyprofile"
        android:elevation="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/t_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description1" />

    <TextView
        android:id="@+id/comEmailP"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/rectangle_companyprofile"
        android:elevation="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/t_email"
        app:layout_constraintBottom_toTopOf="@+id/description1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comContactP"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rectangle_companyprofile"
        android:elevation="5dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="0789026789"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/com_contact_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company.ComCandidateResumeDownloadActivity">


    <View
        android:id="@+id/upNav"
        android:layout_width="410dp"
        android:layout_height="110dp"
        android:background="#E3E3FE"
        android:backgroundTint="#E3E3FE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/bottomNav"
        android:layout_width="410dp"
        android:layout_height="81dp"
        android:background="#E3E3FE"
        android:backgroundTint="#E3E3FE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="@string/udeshani_s"
        android:textColor="#041051"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/upNav"
        app:layout_constraintEnd_toEndOf="@+id/upNav"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="@+id/upNav"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.361" />


    <TextView
        android:id="@+id/subHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_software_engineer"
        android:textColor="#041051"
        android:textSize="@dimen/subHeading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="@+id/upNav"
        app:layout_constraintTop_toBottomOf="@+id/Heading" />


    <TextView
        android:id="@+id/Fname"
        android:layout_width="262dp"
        android:layout_height="28dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="81dp"
        android:text="@string/full_name"
        android:textColor="@color/black"
        android:textSize="@dimen/normalText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePic"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/campus"
        android:layout_width="233dp"
        android:layout_height="31dp"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="89dp"
        android:text="@string/university"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contNo" />

    <TextView
        android:id="@+id/cEmail"
        android:layout_width="278dp"
        android:layout_height="34dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="81dp"
        android:text="@string/email_t"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NIC"
        tools:ignore="TextSizeCheck,TextSizeCheck" />

    <TextView
        android:id="@+id/UID"
        android:layout_width="233dp"
        android:layout_height="31dp"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="89dp"
        android:text="@string/uid"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campus"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/NIC"
        android:layout_width="233dp"
        android:layout_height="31dp"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="89dp"
        android:text="@string/nic"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UID"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/contNo"
        android:layout_width="233dp"
        android:layout_height="31dp"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="89dp"
        android:text="@string/contact"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fname"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rectangle_8_shape"
        android:contentDescription="@string/HomeIcon"
        android:padding="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bottomNav"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vector_ek3" />


    <ImageView
        android:id="@+id/FormIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/IconMarginB"
        android:contentDescription="@string/FormIcon"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNav"
        app:layout_constraintEnd_toEndOf="@+id/bottomNav"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="@+id/bottomNav"
        app:srcCompat="@drawable/vector" />

    <ImageView
        android:id="@+id/ProfileIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="28dp"
        android:contentDescription="@string/ProfileIcon"
        android:src="@drawable/vector_ek2"
        app:layout_constraintBottom_toBottomOf="@+id/bottomNav"
        app:layout_constraintEnd_toEndOf="@+id/bottomNav"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="@+id/bottomNav" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="167dp"
        android:layout_height="122dp"
        android:layout_marginStart="@dimen/proMarginEnd"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="123dp"
        android:contentDescription="@string/profilePic"
        android:src="@drawable/candidate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upNav" />

    <Button
        android:id="@+id/downloadButton"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="108dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/download"
        android:textColor="#000075"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cEmail"
        app:strokeColor="#00007F"
        app:strokeWidth="2dp"
        tools:ignore="TextSizeCheck" />


    <Button
        android:id="@+id/InterviewButton"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:backgroundTint="#00007F"
        android:text="@string/send_interview_request"
        android:textColor="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/downloadButton"
        tools:ignore="TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
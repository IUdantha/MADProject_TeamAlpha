<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Algorithm.Calculator">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="352dp"
        android:layout_height="43dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/calValue"
        android:textAlignment="center"
        android:textColor="@color/nevy_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calBtn" />

    <TextView
        android:id="@+id/calValue"
        android:layout_width="352dp"
        android:layout_height="43dp"
        android:fontFamily="@font/inter_bold"
        android:text="Rs. 00"
        android:textAlignment="center"
        android:textColor="@color/nevy_text"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        android:id="@+id/calBtn"
        android:layout_width="368dp"
        android:layout_height="64dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_box_background"
        android:elevation="5dp"
        android:padding="16dp"
        android:text="@string/calButton"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hourDay" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="310dp"
        android:layout_height="43dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/calHeading"
        android:textAlignment="center"
        android:textColor="@color/nevy_text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/calBackBtn"
        android:layout_width="44dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <EditText
        android:id="@+id/salary"
        android:layout_width="376dp"
        android:layout_height="51dp"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:background="@drawable/text_box_background"
        android:elevation="5dp"
        android:hint="@string/salary"
        android:inputType="number"
        android:padding="16dp"
        android:textColorHint="#8A000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/noDays"
        android:layout_width="377dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_box_background"
        android:elevation="5dp"
        android:hint="@string/noDays"
        android:inputType="number"
        android:padding="16dp"
        android:textColorHint="#8A000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salary" />

    <EditText
        android:id="@+id/hourDay"
        android:layout_width="377dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_box_background"
        android:elevation="5dp"
        android:hint="@string/dayHour"
        android:inputType="number"
        android:padding="16dp"
        android:textColorHint="#8A000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noDays" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company.CompanyDetailForm">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:text="@string/company_details_form"
        android:textColor="#071B43"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtComName"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:autofillHints=""
        android:background="@drawable/rectangle_companyprofile"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/company_name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:shadowColor="#201C1C"
        app:layout_constraintBottom_toTopOf="@+id/edtComContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor,RtlSymmetry" />

    <EditText
        android:id="@+id/edtComDescription"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:autofillHints=""
        android:background="@drawable/rectangle_companyprofile"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/edtComPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry" />


    <EditText
        android:id="@+id/edtComEmail"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:autofillHints=""
        android:background="@drawable/rectangle_companyprofile"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/edtComDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/edtComPassword"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/rectangle_companyprofile"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/ComPassword"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnComAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:importantForAutofill="no"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/edtComContact"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:autofillHints=""
        android:background="@drawable/rectangle_companyprofile"
        android:elevation="5dp"
        android:ems="10"
        android:hint="@string/contact_no"
        android:inputType="phone"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/edtComEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/alreadyHaveComAccount"
        android:layout_width="190dp"
        android:layout_height="23dp"
        android:layout_marginStart="89dp"
        android:layout_marginBottom="89dp"
        android:text="@string/already_have_an_ComAccount"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/loginComAcc"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="92dp"
        android:text="@string/comLogin"
        android:textColor="@color/btn_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alreadyHaveComAccount"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btnComAdd"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#00007F"
        android:text="@string/create_comAccount"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/alreadyHaveComAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
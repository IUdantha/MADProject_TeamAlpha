<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".company.ComLogin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_marginTop="48dp"
        android:text="@string/comLogin"
        android:textAlignment="center"
        android:textColor="@color/nevy_text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/resetComPassword"
        android:layout_width="135dp"
        android:layout_height="26dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="40dp"
        android:text="@string/forgot_comPassword"
        android:textColor="@color/btn_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comLoginPassword"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/dontHaveAccount"
        android:layout_width="174dp"
        android:layout_height="22dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="144dp"
        android:text="@string/don_t_have_an_comAccount"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comLoginButton"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/createComAcc"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="144dp"
        android:text="@string/create_comAccountL"
        android:textColor="@color/btn_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dontHaveAccount"
        app:layout_constraintTop_toBottomOf="@+id/comLoginButton"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/comLoginEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_box_background"
        android:elevation="5dp"
        android:hint="@string/comEmailL"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="#8A000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:autofillHints="" />


    <EditText
        android:id="@+id/comLoginPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:autofillHints=""
        android:background="@drawable/text_box_background"
        android:elevation="5dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="#8A000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comLoginEmail" />

    <Button
        android:id="@+id/comLoginButton"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="76dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/btn_box_background"
        android:elevation="5dp"
        android:padding="16dp"
        android:text="@string/comLogin"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comLoginPassword"
        tools:ignore="DuplicateSpeakableTextCheck,VisualLintButtonSize" />


    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="310dp"
        android:layout_height="74dp"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_type_1_1"
        android:contentDescription="@string/todo" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/candidateComView"
        android:layout_width="410dp"
        android:layout_height="155dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/candidateComContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="43dp"
        android:text="0753905674"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/candidateComView"
        app:layout_constraintEnd_toEndOf="@+id/candidateComView"
        app:layout_constraintStart_toStartOf="@+id/candidateComView" />

    <TextView
        android:id="@+id/candidateComEmail"
        android:layout_width="160dp"
        android:layout_height="23dp"
        android:layout_marginStart="176dp"
        android:layout_marginBottom="72dp"
        android:text="udee@gmail.com"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/candidateComView"
        app:layout_constraintStart_toStartOf="@+id/candidateComView" />

    <TextView
        android:id="@+id/candidateComName"
        android:layout_width="190dp"
        android:layout_height="23dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="26dp"
        android:text="Udeshani Senevirathne"
        android:textColor="@color/btn_color"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/candidateComView"
        app:layout_constraintTop_toTopOf="@+id/candidateComView" />

    <TextView
        android:id="@+id/candidateComUni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="198dp"
        android:layout_marginBottom="14dp"
        android:text="SLIIT"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/candidateComView"
        app:layout_constraintEnd_toEndOf="@+id/candidateComView"
        app:layout_constraintStart_toStartOf="@+id/candidateComView" />

    <ImageView
        android:id="@+id/candidateComPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/candidateComView"
        app:layout_constraintStart_toStartOf="@+id/candidateComView"
        app:srcCompat="@drawable/candidate" />

</androidx.constraintlayout.widget.ConstraintLayout>
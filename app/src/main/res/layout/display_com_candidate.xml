<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rectangle_companyprofile"
    android:padding="16dp">

    <ImageView
        android:id="@+id/candidateComPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/candidate"
        android:contentDescription="@string/profile_pic_content"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/candidateComView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/candidateComName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_candidate_name_text"
            android:textColor="@color/btn_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/candidateComUni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_candidate_uni_text"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/candidateComEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_email_text"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/candidateComContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_contact_"
            android:textSize="16sp"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>
